@model Biblioteka.Models.Data_Models.Authors

@{
    ViewBag.Title = "Details";
}

<h2>Szczegóły</h2>

<div>
    <h4>Autorzy</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Imię")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            @Html.DisplayName("Nazwisko")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            @Html.DisplayName("Data urodzenia")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.birthDate)
        </dd>

        <dt>
            @Html.DisplayName("Płeć")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sex)
        </dd>

        <dt>
            @Html.DisplayName("Kraj urodzenia")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.birthPlace)
        </dd>

        <dt>
            @Html.DisplayName("Biografia")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BIO)
        </dd>

        <dt>
            @Html.DisplayName("Zdjęcie")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.photo)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edytuj", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Powrót", "Index")
</p>
